{
    "openapi": "3.0.0",
    "info": {
        "title": "Web Api Restfull - Notetools",
        "description": "A WebApi Notetools, tem como objetivo melhorar metas e gestão de contratos realizados, para que possa acompanhar desde sua criação a conclusão de intalação do serviço",
        "contact": {
            "email": "victorszdeveloper@gmail.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:3000/",
            "description": "Api Teste"
        }
    ],
    "paths": {
        "/users": {
            "post": {
                "summary": "Criação de usuário",
                "tags": ["Usuários"],
                "security": [{ "bearerAuth": [] }],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/User"
                            },
                            "examples": {
                                "user": {
                                    "value": {
                                        "username" : "walter.white",
                                        "firstName": "Walter",
                                        "lastName": "White",
                                        "password": "ww123456"
                                    }
                                }
                            } 
                        }
                    }
                },
                "responses": {
                    "401": {
                        "description": "Usuário não autorizado"
                    },
                    "409": {
                        "description": "Username indisponível"
                    },
                    "201": {
                        "description": "OK",
                        "content": {
                            "schema": {
                                "type": "object",
                                "items": {
                                    "id": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "get": {
                "summary": "Listar todos os usuários",
                "tags": ["Usuários"],
                "security": [{ "bearerAuth": [] }],
                "parameters": [
                    {
                        "name": "search",
                        "in": "query",
                        "description": "Busca os usuários pelo username, firstName e lastName",
                        "required": false
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json" : {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "users": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/User"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Nenhum usuário encontrado"
                    },
                    "401": {
                        "description": "Usuário não autorizado"
                    }
                }
            }
        },
        "/users/{id}": {
            "get": {
                "summary": "Buscar usuário pelo id",
                "tags": ["Usuários"],
                "security": [{ "bearerAuth": [] }],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "A busca é feito por id único do usuário",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Usuário não encontrado com este id"
                    },
                    "401": {
                        "description":"Usuário não autorizado"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "User": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "username": {
                        "type": "string"
                    },
                    "firstName": {
                        "type": "string"
                    },
                    "lastName": {
                        "type":"string"
                    },
                    "password": {
                        "type": "string"
                    },
                    "createdAt": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updatedAt": {
                        "type": "string",
                        "format": "date-time"
                    }
                }
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    }
}